<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.upb.meetingrooms.presentation.login.LoginActivity">

    <TextView
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_page_message"
        />

    <TextView
        android:text="Welcome to MeetingRooms App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/loginGoogle"/>

    <Button
        android:id="@+id/loginGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_with_google"
        android:layout_centerInParent="true"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/btn_google_dark_normal_mdpi"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
         />

    <TextView
        android:id="@+id/versionText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
